<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.boot112.mapper.ProductMapper">
    <sql id="insert">
        INSERT INTO newproduct

    </sql>
    <sql id="delete">
        DELETE FROM newproduct WHERE
    </sql>
    <sql id="update">
        UPDATE newproduct
    </sql>
    <sql id="select">
        SELECT id,title,price,num FROM newproduct
    </sql>

    <insert id="insert">
        <include refid="insert"></include>
        VALUES (
            null,#{title},#{price},#{num}
                )
    </insert>

    <insert id="insertMulti">
        <include refid="insert"></include>
            <foreach collection="list" item="p" separator=",">
                VALUES (NULL,#{p.title},#{p.price},#{p.num})
            </foreach>
    </insert>

    <delete id="deleteById">
        <include refid="delete"></include>
        id=#{id}
    </delete>

    <delete id="deleteByIdMulti">
        <include refid="delete"></include>
        id IN (
            <foreach collection="array" item="id" separator="," >
                #{id}
            </foreach>
        )
    </delete>

    <update id="dynamicUpdate">
        <include refid="update"></include>
        <set>
            <if test="title!=null">title=#{title},</if>
            <if test="price!=null">price=#{price},</if>
            <if test="num!=null">num=#{num}</if>
        </set>
        WHERE id=#{id}
    </update>

    <select id="selectById"
            resultType="cn.tedu.boot112.entity.Product">
        <include refid="select"></include>
        WHERE id=#{id}
    </select>

    <select id="selectById"
            resultType="cn.tedu.boot112.entity.Product">
        <include refid="select"></include>
    </select>

    <select id="selectById"
            resultType="cn.tedu.boot112.entity.Product">
        select count(*) from newproduct
    </select>
</mapper>
